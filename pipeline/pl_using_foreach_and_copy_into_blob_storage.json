{
	"name": "pl_using_foreach_and_copy_into_blob_storage",
	"properties": {
		"description": "using for each to copy data into blob storage",
		"activities": [
			{
				"name": "ForEachTable",
				"type": "ForEach",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@pipeline().parameters.Tableinfo",
						"type": "Expression"
					},
					"activities": [
						{
							"name": "Copy SalesLT tables from Sqldb to blob storage",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "AzureSqlSource",
									"queryTimeout": "02:00:00",
									"partitionOption": "None"
								},
								"sink": {
									"type": "DelimitedTextSink",
									"storeSettings": {
										"type": "AzureBlobStorageWriteSettings",
										"copyBehavior": "FlattenHierarchy"
									},
									"formatSettings": {
										"type": "DelimitedTextWriteSettings",
										"quoteAllText": true,
										"fileExtension": ".txt"
									}
								},
								"enableStaging": false,
								"translator": {
									"type": "TabularTranslator",
									"typeConversion": true,
									"typeConversionSettings": {
										"allowDataTruncation": true,
										"treatBooleanAsNumber": false
									}
								}
							},
							"inputs": [
								{
									"referenceName": "ds_sqltables_with_manually_gener_parameters",
									"type": "DatasetReference",
									"parameters": {
										"TableName": {
											"value": "@item().Table_Name",
											"type": "Expression"
										},
										"SchemaName": {
											"value": "@item().schema",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "ds_sink_saleslt_table_to_blob_stor_acct",
									"type": "DatasetReference",
									"parameters": {
										"FileName": {
											"value": "@concat(item().Table_Name,'.csv')",
											"type": "Expression"
										}
									}
								}
							]
						}
					]
				}
			}
		],
		"parameters": {
			"Tableinfo": {
				"type": "array",
				"defaultValue": [
					{
						"Schema": "SalesLT",
						"Table_Name": "Address"
					},
					{
						"Schema": "SalesLT",
						"Table_Name": "Customer"
					},
					{
						"Schema": "SalesLT",
						"Table_Name": "CustomerAddress"
					},
					{
						"Schema": "SalesLT",
						"Table_Name": "Product"
					},
					{
						"Schema": "SalesLT",
						"Table_Name": "ProductCategory"
					},
					{
						"Schema": "SalesLT",
						"Table_Name": "ProductDescription"
					},
					{
						"Schema": "SalesLT",
						"Table_Name": "ProductModel"
					},
					{
						"Schema": "SalesLT",
						"Table_Name": "ProductModelProductDescription"
					},
					{
						"Schema": "SalesLT",
						"Table_Name": "SalesOrderDetail"
					},
					{
						"Schema": "SalesLT",
						"Table_Name": "SalesOrderHeader"
					}
				]
			}
		},
		"annotations": []
	}
}